<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestGradientThemeChanging" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="gradientColorOne">@color/gradientColorOne</item>
        <item name="gradientColorTwo">@color/gradientColorTwo</item>
    </style>

    <style name="themeOne" parent="Theme.TestGradientThemeChanging">
        <item name="colorPrimary">@color/gradientColorOne</item>
        <item name="gradientColorOne">@color/gradientColorOne</item>
        <item name="gradientColorTwo">@color/gradientColorTwo</item>
    </style>

    <style name="themeTwo" parent="Theme.TestGradientThemeChanging">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="gradientColorOne">@color/colorPrimary</item>
        <item name="gradientColorTwo">@color/colorAccent</item>
    </style>

    <style name="themeThree" parent="Theme.TestGradientThemeChanging">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="gradientColorOne">@color/purple_700</item>
        <item name="gradientColorTwo">@color/teal_700</item>
    </style>

</resources>